<html>
  <body>
    <main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>

            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secondary btn-block" href="/users/<%= @user.id %>/edit">
                <i class="fas fa-user-cog"></i>
              </a>
            </div>

            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
            <div class="form-group">
              <h4>Title</h4>
              <%= f.text_field :title %>
            </div>
            <div class="form-group">
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book' %>
            </div>
            <% end %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <tbody>
                <tr>
                  <td>
                    <a href="/users/<%= @book_show.user_id %>">
                      <% if @book_show.user.profile_image.attached? %>
                        <%= image_tag @book_show.user.profile_image, size: "200x200" %>
                      <% else %>
                        <%= image_tag 'no_image', size: "200x200" %>
                      <% end %>
                      <br>
                      <%= @book_show.user.name %>
                    </a>
                  </td>
                  <td>
                    <a href='/books/<%= @book_show.id %>'><%= @book_show.title %></a>
                  </td>
                  <td><%= @book_show.body %></td>
                  <% if @book_show.user == current_user %>
                  <td>
                    <%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@book_show), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
                  </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>